<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    tools:context=".ui.auth.register.tutor.RegisterTutorResult">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/test_accepted" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Selamat \nKamu Lolos Test!"
        android:textAlignment="center"
        android:textColor="@color/base_black"
        android:layout_marginTop="30dp"
        android:textSize="32sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="Tinggal 1 langkah lagi, siapkan KTP mu sebagai bukti bahwa kamu merupakan warga negara Indonesia"
        android:textAlignment="center"
        android:textColor="@color/base_black"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_upload_ktp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_gravity="end"
        android:height="55dp"
        android:backgroundTint="@color/primary_yellow"
        android:fontFamily="@font/plus_jakarta_sans_bold"
        android:text="Upload KTP"
        android:textSize="18sp"
        app:cornerRadius="15dp" />

</LinearLayout>