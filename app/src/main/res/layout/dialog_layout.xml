<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_date_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/darker_yellow"
        app:boxBackgroundColor="@color/partially_yellow"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
        app:cursorColor="@color/darker_yellow"
        app:hintTextColor="@color/darker_yellow">

        <EditText
            android:id="@+id/et_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Pilih Tanggal dan Waktu"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:hint="Pilih Tanggal dan Waktu"
            android:inputType="text"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/darker_yellow"
        app:boxBackgroundColor="@color/partially_yellow"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusBottomEnd="20dp"
        app:boxCornerRadiusBottomStart="20dp"
        app:boxCornerRadiusTopEnd="20dp"
        app:boxCornerRadiusTopStart="20dp"
        app:boxStrokeColor="@color/mtrl_textinput_default_box_stroke_color"
        app:cursorColor="@color/darker_yellow"
        app:hintTextColor="@color/darker_yellow">

        <EditText
            android:id="@+id/et_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="Lokasi Tutoring"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:hint="Lokasi Tutoring"
            android:inputType="text"
            android:paddingVertical="10dp"
            android:textSize="18sp" />

    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>
