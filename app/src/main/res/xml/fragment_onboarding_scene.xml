<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/onboarding_1"
        motion:constraintSetStart="@id/start_2"
        motion:duration="1000" motion:motionInterpolator="cubic(0,0,0,1)"
        motion:autoTransition="animateToEnd">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/tv_appname"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:id="@+id/pos_4"
            motion:layout_constraintStart_toEndOf="@id/pos_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_3"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_3" />
        <Constraint
            android:id="@+id/pos_3"
            motion:layout_constraintStart_toEndOf="@+id/pos_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_2"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_2" />
        <Constraint
            android:id="@+id/pos_2"
            motion:layout_constraintStart_toEndOf="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_1"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_1" />
        <Constraint
            android:id="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="35dp"
            motion:layout_constraintBottom_toTopOf="parent"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="35dp" />
        <Constraint
            android:id="@+id/img_tutorin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_next"
            motion:layout_constraintTop_toTopOf="@+id/btn_next"
            motion:layout_constraintStart_toStartOf="parent"
            android:id="@+id/btn_lewati" />
        <Constraint
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintTop_toBottomOf="parent"
            android:id="@+id/btn_next"
            android:layout_marginTop="10dp" />
        <Constraint
            android:layout_width="0dp"
            android:layout_height="400dp"
            android:id="@+id/img_onboarding_1"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="parent" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/start_2"
        motion:deriveConstraintsFrom="@+id/start" />

    <ConstraintSet android:id="@+id/onboarding_1">
        <Constraint
            android:id="@+id/tv_appname"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/img_tutorin"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:layout_height="60dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:id="@+id/btn_next"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/btn_lewati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_next"
            motion:layout_constraintTop_toTopOf="@+id/btn_next"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            android:layout_height="400dp"
            android:layout_width="0dp"
            android:id="@+id/img_onboarding_1"
            motion:layout_constraintEnd_toEndOf="@id/img_tutorin"
            motion:layout_constraintStart_toStartOf="@id/pos_1"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp" />
        <Constraint
            android:id="@+id/pos_2"
            motion:layout_constraintStart_toEndOf="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_1"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_1" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pos_3"
            motion:layout_constraintStart_toEndOf="@+id/pos_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_2"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pos_4"
            motion:layout_constraintStart_toEndOf="@id/pos_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_3"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_3" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/start"
        motion:constraintSetEnd="@+id/start_2"
        motion:duration="1000"
        motion:autoTransition="animateToEnd" motion:motionInterpolator="cubic(0,1,1,1)"/>
    <ConstraintSet
        android:id="@+id/onboarding_2"
        motion:deriveConstraintsFrom="@+id/onboarding_1" >
        <Constraint
            android:id="@+id/img_onboarding_2"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@id/pos_1"
            motion:layout_constraintEnd_toEndOf="@id/img_tutorin"
            android:layout_marginTop="45dp" />
        <Constraint
            android:id="@+id/img_onboarding_1"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="5dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="35dp">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pos_2"
            motion:layout_constraintStart_toEndOf="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_1"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_1">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/onboarding_1"
        motion:constraintSetEnd="@+id/onboarding_2" >
        <OnSwipe
            motion:dragDirection="dragLeft" />
        <OnClick motion:targetId="@+id/btn_next" />
    </Transition>
    <ConstraintSet
        android:id="@+id/onboarding_3"
        motion:deriveConstraintsFrom="@+id/onboarding_2" >
        <Constraint
            android:id="@+id/img_onboarding_2"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/img_onboarding_3"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="45dp"
            motion:layout_constraintStart_toStartOf="@id/pos_1"
            motion:layout_constraintEnd_toEndOf="@id/img_tutorin" />
        <Constraint
            android:id="@+id/pos_2"
            motion:layout_constraintStart_toEndOf="@+id/pos_1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_1"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_1" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pos_3"
            motion:layout_constraintStart_toEndOf="@+id/pos_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_2"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/btn_end"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="parent" />
        <Constraint
            android:id="@+id/btn_next"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="1" />
        <Constraint
            android:id="@+id/btn_lewati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_next"
            motion:layout_constraintTop_toTopOf="@+id/btn_next"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="1"
            android:scaleX="1"
            android:scaleY="1" />
    </ConstraintSet>
    <ConstraintSet
        android:id="@+id/onboarding_4"
        motion:deriveConstraintsFrom="@+id/onboarding_3" >
        <Constraint
            android:id="@+id/img_onboarding_3"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toStartOf="parent" />
        <Constraint
            android:id="@+id/img_onboarding_4"
            android:layout_width="0dp"
            android:layout_height="400dp"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintStart_toStartOf="@id/pos_1"
            motion:layout_constraintEnd_toEndOf="@id/img_tutorin"
            android:layout_marginTop="45dp" />
        <Constraint
            android:id="@+id/pos_3"
            motion:layout_constraintStart_toEndOf="@+id/pos_2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_2"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_2" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/pos_4"
            motion:layout_constraintStart_toEndOf="@id/pos_3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            motion:layout_constraintBottom_toBottomOf="@id/pos_3"
            motion:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="5dp"
            motion:layout_constraintHorizontal_bias="0.5"
            motion:layout_constraintTop_toTopOf="@id/pos_3" >
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/btn_end"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="parent" />
        <Constraint
            android:id="@+id/btn_next"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="60dp"
            android:layout_height="60dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:alpha="0" />
        <Constraint
            android:id="@+id/btn_lewati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintBottom_toBottomOf="@+id/btn_next"
            motion:layout_constraintTop_toTopOf="@+id/btn_next"
            motion:layout_constraintStart_toStartOf="parent"
            android:alpha="0"
            android:scaleX="0.9"
            android:scaleY="0.9" />
    </ConstraintSet>
    <Transition
        motion:constraintSetStart="@+id/onboarding_2"
        motion:constraintSetEnd="@+id/onboarding_3" >
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="right" />
        <OnClick motion:targetId="@+id/btn_next" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/onboarding_3"
        motion:constraintSetEnd="@+id/onboarding_4" >
        <OnSwipe
            motion:dragDirection="dragLeft"
            motion:touchAnchorSide="right" />
        <OnClick motion:targetId="@+id/btn_next" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/onboarding_4"
        motion:constraintSetEnd="@+id/onboarding_3" >
        <OnSwipe motion:dragDirection="dragRight" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/onboarding_3"
        motion:constraintSetEnd="@+id/onboarding_2" >
        <OnSwipe motion:dragDirection="dragRight" />
    </Transition>
    <Transition
        motion:constraintSetStart="@+id/onboarding_2"
        motion:constraintSetEnd="@+id/onboarding_1" >
        <OnSwipe motion:dragDirection="dragRight" />
    </Transition>

</MotionScene>