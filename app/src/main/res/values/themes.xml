<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.TutorinEdutech" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_yellow</item>
        <item name="colorSecondary">@color/secondary_yellow</item>
        <item name="colorTertiary">@color/tertiary_blue</item>
        <item name="android:textColorHighlight">@color/secondary_yellow</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" >
        <item name="android:fontFamily">@font/plus_jakarta_sans_semibold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="circleImageViewHome">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <style name="circleImageViewProfile">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50dp</item>
    </style>

    <style name="Theme.App" parent="@android:style/Theme.DeviceDefault" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/tertiary_yellow</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated
             drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Base.Theme.TutorinEdutech</item>
    </style>

    <!-- Custom style for the AlertDialog -->
    <style name="CustomAlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/base_yellowish</item>
        <item name="android:fontFamily">@font/plus_jakarta_sans_regular</item>

        <item name="android:buttonBarButtonStyle">@style/CustomButtonBarButton</item>
    </style>

    <style name="CustomButtonBarButton" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/primary_yellow</item>
    </style>

    <style name="Theme.TutorinEdutech" parent="Base.Theme.TutorinEdutech" />
</resources>