<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_yellowish"
    tools:context=".ui.auth.register.tutor.LoadingTestGradient">


    <ImageView
        android:id="@+id/iv_gradient_1"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:padding="80dp"
        android:src="@drawable/gradient_loading_test_1"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gradient_2"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:padding="80dp"
        android:src="@drawable/gradient_loading_test_2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_gradient_3"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:paddingTop="90dp"
        android:paddingHorizontal="60dp"
        android:src="@drawable/gradient_loading_test_3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />


    <ImageView
        android:id="@+id/iv_loading"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/loading_test"
        app:layout_constraintBottom_toTopOf="@+id/tv_loading"
        app:layout_constraintEnd_toEndOf="@+id/tv_loading"
        app:layout_constraintStart_toStartOf="@+id/tv_loading" />

    <TextView
        android:id="@+id/tv_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/plus_jakarta_sans_regular"
        android:text="Tunggu sebentar ya... \nkami sedang memeriksa hasil test \nyang baru saja anda lakukan"
        android:textAlignment="center"
        android:textColor="@color/base_black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>