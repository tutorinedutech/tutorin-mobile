<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_popular_tutor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_columnWeight="1"
    android:layout_margin="4dp"
    android:backgroundTint="@color/tertiary_blue"
    card_view:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/iv_tutor_profile"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_tutor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/tutor_name"
            android:textAlignment="center"
            android:textColor="@color/base_pure_white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_tutor_specialist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/tutor_specialist"
            android:textAlignment="center"
            android:textColor="@color/base_pure_white"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/star_icon"
                android:src="@drawable/ic_star" />

            <TextView
                android:id="@+id/tv_tutor_rating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="@string/tutor_rating"
                android:textColor="@color/secondary_yellow"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tutor_total_learner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/plus_jakarta_sans_regular"
            android:text="@string/tutor_total_learner"
            android:textAlignment="center"
            android:textColor="@color/base_pure_white"
            android:textSize="12sp"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
