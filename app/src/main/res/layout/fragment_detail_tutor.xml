<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_result_tutor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base_yellowish"
    tools:context=".ui.learner.tutors.tutoring.detail.DetailTutoring">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/pb_detail_tutor"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:elevation="8dp"
            android:indeterminate="true"
            android:indeterminateTint="@color/primary_yellow"
            android:indeterminateTintMode="src_in"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/layout_detail_tutor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Toolbar
                android:id="@+id/tb_detail_result_tutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:title="Detail"
                android:titleTextAppearance="@style/AppTheme.AppBarOverlay"
                android:titleTextColor="@color/base_black" />

            <androidx.cardview.widget.CardView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="100dp">

                <ImageView
                    android:id="@+id/iv_tutor_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@tools:sample/avatars" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_tutor_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/plus_jakarta_sans_semibold"
                android:text="@string/tv_tutor_name"
                android:textSize="22sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:layout_marginHorizontal="4dp"
                    android:src="@drawable/ic_star" />

                <TextView
                    android:id="@+id/tv_tutor_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_medium"
                    android:text="@string/tv_tutor_rating" />

            </LinearLayout>

            <View
                android:id="@+id/dv_progress_learning"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/base_gray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:orientation="vertical"
                android:paddingHorizontal="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Tingkat Edukasi"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tutor_education"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="SMA" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Jenis Kelamin"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tutor_gender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="Laki-laki" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Domisili"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tutor_domicile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="Yogyakarta" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Bahasa"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tutor_language"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="Indonesia" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Bidang"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_tutor_topic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="Matematika" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Metode Mengajar"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_method_teaching"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/plus_jakarta_sans_regular"
                    android:text="Offline" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/plus_jakarta_sans_semibold"
                    android:text="Tampilan CV"
                    android:textSize="16sp" />

                <ProgressBar
                    android:id="@+id/pb_loading_pdf"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:elevation="8dp"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/primary_yellow"
                    android:indeterminateTintMode="src_in"
                    android:visibility="gone"/>

                <ImageView
                    android:id="@+id/iv_tutor_cv"
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:layout_marginTop="4dp"
                    android:scaleType="fitXY"
                    tools:src="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_tutor_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Rp. 150.000,00 / "
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/plus_jakarta_sans_bold"
                        android:text="Sesi" />

                </LinearLayout>

                <Button
                    android:id="@+id/btn_choose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="15dp"
                    android:height="55dp"
                    android:backgroundTint="@color/primary_yellow"
                    android:fontFamily="@font/plus_jakarta_sans_bold"
                    android:text="Pilih Tutor Ini"
                    android:textSize="18sp"
                    app:cornerRadius="18dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>